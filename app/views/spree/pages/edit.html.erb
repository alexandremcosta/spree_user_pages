<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @page } %> 
<%= form_for @page do |f| %>
  <p class="form-group">
    <%= f.label :title, Spree.t(:title) %>
    <%= f.text_field :title, :class => 'form-control' %>
  </p>
  <p class="form-group">
    <%= f.label :slug, Spree.t(:path) %>
    <%= f.text_field :slug, :class => 'form-control' %>
  </p>
  <div class="form-actions" data-hook="buttons">
    <%= f.submit Spree.t('update'), class: 'btn btn-primary' %>
    <span class="or"><%= Spree.t(:or) %></span>
    <%= link_to Spree.t('actions.cancel'), account_path, class: 'btn btn-default' %>
  </div>
<% end %>
