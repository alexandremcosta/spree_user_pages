<% if @pages.any? %>

  <div data-hook="account_my_pages" class="account-my-pages">

    <h3><%= Spree.t(:my_pages) %></h3>

    <table class="table table-striped order-summary">

      <thead class="active">
      <tr>
        <th class="page-title"><%= Spree.t(:title) %></th>
        <th class="page-slug"><%= Spree.t(:slug) %></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td class="page-title"><strong><%= page.title %></strong></td>
          <td class="page-slug"><%= page.slug %></td>
          <td><%= link_to Spree.t(:edit), edit_page_path(page) %></td>
          <td><%= link_to Spree.t(:show), user_page_path(page) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>
